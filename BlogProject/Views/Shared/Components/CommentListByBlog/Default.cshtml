@model IEnumerable<EntityLayer.Concrete.Comment>
	@*@using EntityLayer.Concrete
	@model List<Comment>*@

	
<div class="comment-top">
	@if (Model.Count() == 0)
	{
		<p>Comment this blog as a first</p>
	}
	<h4>Comments</h4>
	@foreach (var item in Model)
	{
		

	<div class="media">
		<img src="/web/images/t1.jpg" alt="" class="img-fluid" />
		<div class="media-body">
			<h5 class="mt-0">@item.CommentUserName</h5>
			<p>
			@item.CommenContent
			</p>

		
		</div>
	</div>
	}
</div>